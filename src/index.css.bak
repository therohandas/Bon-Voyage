/* ============
  Global Theme
==============*/
:root{
  --bg-0:#10130f;           /* deep olive black */
  --bg-1:#161c15;           /* dark moss */
  --bg-2:#1f271f;           /* forest shadow */
  --card:#222b22;           /* card base */
  --e-olive:#3c4d3a;        /* mossy olive */
  --e-fern:#557a57;         /* fern */
  --e-sage:#9db79e;         /* sage */
  --e-sand:#d7c7a3;         /* sand */
  --e-clay:#a67f5a;         /* clay */
  --e-ocean:#2f5d62;        /* ocean teal */
  --txt-1:#eef2ea;          /* almost white */
  --txt-2:#c9d4c7;          /* light sage */
  --muted:#869184;          /* muted gray-green */
  --accent: var(--e-sand);
  --radius: 18px;
  --shadow: 0 10px 30px rgba(0,0,0,.35);
}

*{box-sizing:border-box}
html,body,#root{height:100%}
body{
  margin:0;
  font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', sans-serif;
  color: var(--txt-1);
  background:
    radial-gradient(1200px 800px at 10% 10%, rgba(47,93,98,.18), transparent 70%),
    radial-gradient(1000px 600px at 90% 30%, rgba(166,127,90,.14), transparent 65%),
    linear-gradient(180deg, var(--bg-1), var(--bg-0));
}

.app-shell{
  min-height:100%;
  display:flex;
  flex-direction:column;
}

.container{
  width:min(1100px, 92vw);
  margin-inline:auto;
}

.section{
  padding: 56px 0;
}

.card{
  background: linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,.0));
  border:1px solid rgba(255,255,255,.06);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  backdrop-filter: blur(4px);
}

.btn{
  display:inline-flex;
  gap:.6rem;
  align-items:center;
  border-radius: 999px;
  padding:.8rem 1.1rem;
  border:1px solid rgba(255,255,255,.08);
  background: linear-gradient(180deg, rgba(85,122,87,.35), rgba(60,77,58,.35));
  color:var(--txt-1);
  text-decoration:none;
  transition: transform .2s ease, box-shadow .2s ease, background .2s ease;
}
.btn:hover{
  transform: translateY(-2px);
  box-shadow: 0 12px 40px rgba(47,93,98,.35);
  background: linear-gradient(180deg, rgba(85,122,87,.5), rgba(60,77,58,.5));
}

.navbar{
  position:sticky; top:0; z-index:50;
  background: rgba(16,19,15,.6);
  backdrop-filter: blur(8px);
  border-bottom:1px solid rgba(255,255,255,.06);
}

.navbar-inner{
  display:flex; align-items:center; justify-content:space-between;
  padding: 14px 0;
}

.brand{
  font-family: 'Dancing Script', cursive;
  font-size: 2.5rem;   /* adjust size as needed */
  font-weight: 700;
  color: #49b550;
  letter-spacing:.4px;
  text-decoration: none;
}

.nav-links{
  display:flex; gap: 18px;
}
.nav-link{
  position:relative;
  text-decoration:none;
  color:var(--txt-1);
  padding: 8px 4px;
  font-weight:600;
}
.nav-link::after{
  content:"";
  position:absolute; left:0; right:0; bottom:2px; height:2px;
  background: linear-gradient(90deg, var(--e-sand), var(--e-clay));
  transform: scaleX(0);
  transform-origin: left;
  transition: transform .25s ease;
}
.nav-link:hover::after{ transform: scaleX(1) }

.hero{
  display:grid; grid-template-columns: 1.2fr .8fr; gap: 32px;
  align-items:center;
}
.hero h1{
  font-family: "Playfair Display", serif;
  font-size: clamp(34px, 5vw, 58px);
  line-height: 1.05;
  margin: 0 0 8px 0;
}
.hero p{
  color:var(--txt-2);
  margin:0 0 24px 0;
}

.hero-card{
  padding: 24px;
}

.grid{
  display:grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 18px;
}
.col-4{grid-column: span 4}
.col-6{grid-column: span 6}
.col-12{grid-column: span 12}

@media (max-width: 900px){
  .hero{ grid-template-columns: 1fr; }
  .col-4{grid-column: span 6}
}
@media (max-width: 640px){
  .col-4{grid-column: span 12}
}

.spot-card{
  padding:16px;
  display:flex; flex-direction:column; gap:12px;
}
.spot-img{
  width:100%; height:180px; border-radius: calc(var(--radius) - 4px);
  object-fit:cover;
  border:1px solid rgba(255,255,255,.08);
}
.spot-meta{
  color: var(--muted);
  font-size:.95rem;
  display:flex; justify-content:space-between; gap:12px;
}

.footer{
  margin-top:auto;
  border-top:1px solid rgba(255,255,255,.06);
  background: rgba(16,19,15,.5);
  backdrop-filter: blur(6px);
  color: var(--muted);
  font-size:.95rem;
}
.footer .inner{
  display:flex; align-items:center; justify-content:space-between;
  padding: 18px 0;
}
